<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/pub_compare_card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"

            android:background="@drawable/cardviewborder"

            android:orientation="vertical">


            <TextView
                android:id="@+id/pub_compare_text_criteria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/pub_compare_card_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"

                android:background="@drawable/cardviewborder"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pub_compare_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:background="#808080" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pub_compare_card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"

                android:background="@drawable/cardviewborder"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pub_compare_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>